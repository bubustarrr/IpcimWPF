<Window x:Class="IpcimWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IpcimWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>
		<DataGrid x:Name="dataGrid" Grid.Column="0"></DataGrid>
		<StackPanel Grid.Column="0" Orientation="Vertical" Margin="10">
			
		</StackPanel>
		<StackPanel Grid.Column="1" Orientation="Vertical" Margin="10">
			<Label Content="Domain-name:" Margin="5">
			</Label>
			<TextBox x:Name="domainNameTextBox" Width="150" Margin="5"></TextBox>
			<Label Content="IP cím:"></Label>
			<TextBox x:Name="ipCimTextBox" Width="150" Margin="5"></TextBox>
			<Button Content="Bevitel" Margin="5" Padding="5" Width="80" Click="hozzaadas"></Button>
			<Button Content="Mentés" Margin="5" Padding="5" Width="80" Click="mentes"></Button>
		</StackPanel>
	</Grid>
</Window>
